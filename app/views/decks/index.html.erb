<section>
  <h2>Выберите колоду или создайте новую</h2>
  <% @decks.each do |deck| %>
    <div class="col-xs-4">
      <p><%= deck.title %></p>
      <% if deck.current == true %>
        <p>Текущая колода</p>
      <% end %>
      <%= link_to 'Show', deck %>
      <%= link_to 'Edit', edit_deck_path(deck) %>
      <%= link_to 'Destroy', deck_path(deck),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</section>